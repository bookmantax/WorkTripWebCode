<div class="modal fade" id="forgot-password-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body py-5 px-4 px-sm-5">
                <div class="text-center">
                    <img src="~/Content/img/logo.png" width="60%" class="mb-5" />
                </div>

                <form action="" method="post" id="create-password-reset-code-form">
                    <h5 class="text-primary font-weight-semibold mb-3">Please enter phone number associated with your account.</h5>

                    <div class="alert alert-warning" role="alert" style="display: none">
                        <i class="fas fa-exclamation-circle mr-1"></i> Verification code is not correct.
                    </div>


                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label class="m-0 text-primary font-weight-bold" style="font-size: 0.9em">Phone number</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fas fa-phone-alt"></i></span>
                            </div>
                            <input class="form-control form-control-lg text-monospace" placeholder="" name="phoneNumber" />
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-secondary btn-lg btn-block">Reset password</button>
                    </div>
                </form>

                <div class="text-center mt-3" id="have-account-already">
                    <button data-toggle="modal" data-target="#login-modal" data-dismiss="modal" class="btn btn-link text-primary">Go back to sign in form</button>
                </div>
            </div>
        </div>
    </div>
</div>

