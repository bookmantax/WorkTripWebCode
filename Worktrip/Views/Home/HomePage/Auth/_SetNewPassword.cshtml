<div class="modal fade" id="set-new-password-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body py-5 px-4 px-sm-5">
                <div class="text-center">
                    <img src="~/Content/img/logo.png" width="60%" class="mb-5" />
                </div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="position: absolute; top: 10px; right: 15px;">
                    <span aria-hidden="true">&times;</span>
                </button>
                <form id="set-new-password-form">
                    <h5 class="text-primary font-weight-semibold mb-3">Please set new pasword.</h5>

                    <div class="alert alert-warning" role="alert" style="display: none">
                        <i class="fas fa-exclamation-circle mr-1"></i> We are unable to reset your password using the given link.
                    </div>

                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label class="m-0 text-primary font-weight-bold" style="font-size: 0.9em">Password</label>
                        <div class="input-group ">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fas fa-key"></i></span>
                            </div>
                            <input class="form-control form-control-lg" type="password" placeholder="Password" name="password" id="new-password" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="m-0 text-primary font-weight-bold" style="font-size: 0.9em">Confirm Password</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fas fa-key"></i></span>
                            </div>
                            <input class="form-control form-control-lg" type="password" placeholder="Password" name="confirmpassword" />
                        </div>
                    </div>

                    <input hidden readonly value="@ViewBag.userId" name="userId" />
                    <input hidden readonly value="@ViewBag.code" name="code" />

                    <div class="form-group">
                        <button type="submit" class="btn btn-secondary btn-lg btn-block">Set new password</button>
                    </div>
                </form>

                <div class="text-center mt-3" id="have-account-already">
                    <button data-toggle="modal" data-target="#login-modal" data-dismiss="modal" class="btn btn-link text-primary">Go back to sign in form</button>
                </div>
            </div>
        </div>
    </div>
</div>

