<div class="modal fade" id="login-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body py-5 px-4 px-sm-5">
                <div class="text-center">
                    <img src="~/Content/img/logo.png" width="60%" class="mb-5" />
                </div>


                <form action="/Account/ExternalLoginCustom" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-default btn-lg btn-block" style="color: #3b5998; background: #dfe3ee" id="facebook-register" name="provider" value="Facebook" title="Log in using your Facebook account"><i class="fab fa-facebook-square fa-lg mr-3"></i> Sign in with Facebook</button>
                    <input type="hidden" name="userId">
                </form>

                <div class="d-flex my-3 align-items-center justify-content-between">
                    <hr style="width: 45%" /><strong>OR</strong><hr style="width: 45%" />
                </div>

                <form action="" method="post" id="login-form">
                    <div class="alert alert-warning" role="alert" style="display: none">
                        <i class="fas fa-exclamation-circle mr-1"></i>Incorrect email address or password.
                    </div>

                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fas fa-at"></i></span>
                            </div>
                            <input class="form-control form-control-lg" placeholder="Email address" name="Email" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fas fa-key"></i></span>
                            </div>
                            <input class="form-control form-control-lg" type="password" placeholder="Password" name="Password" />
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-secondary btn-lg btn-block">Sign in</button>
                    </div>

                </form>
                <div class="text-center mt-3">
                    <h6 class="font-weight-bold m-0 text-secondary">Don't have an account yet?</h6>
                    <button data-toggle="modal" data-target="#register-modal" data-dismiss="modal" class="btn btn-link text-primary">Open new account for free</button>
                </div>
                <div class="text-center">
                    <hr />
                    <a data-toggle="modal" data-target="#forgot-password-modal" data-dismiss="modal">Forgot password?</a>
                </div>
            </div>
        </div>
    </div>
</div>
